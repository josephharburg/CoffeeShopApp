
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Users
<div class="backgroundReg"></div>
<h1 style="font-family:'Anton'; color:#0E0504;">Register for Cuppa Joe!</h1>
<form asp-controller="Home" asp-action="AddUser"  oninput='confirmpassword.setCustomValidity(confirmpassword.value != Password.value ? "Passwords do not match." : "")' >
    <div class="form-group">
        <label class="fontJura" for="FirstName">First Name:</label>
        <input type="text" class="form-control" name="Firstname" placeholder="Enter first name" required>
    </div>
    <div class="form-group">
        <label class="fontJura" for="lastname">Last Name:</label>
        <input type="text" class="form-control" name="Lastname" placeholder="Enter last name" required>

    </div>
    <div class="form-group">
        <label class="fontJura" for="Email">Email Address:</label>
        <input type="email" class="form-control" name="Email" placeholder="Enter email" required>
        
    </div>
    <div class="form-group">
        <label class="fontJura" asp-for="Password">Password:</label>
        <input type="password" class="form-control" id="pw1" asp-for="Password" name="Password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$">
        <small id="passwordHelpBlock" class="form-text text-danger">
            <span asp-validation-for="Password"></span>
        </small>
        
    </div>
    <div class="form-group">
        <label class="fontJura" for="confirmpassword">Confirm Password:</label>
        <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
            @*<span asp-validation-for="Password"></span>*@
        </small>
    </div>
    <div class="form-group">
        <h1 style="font-family:'Anton'; color:#0E0504;">How do you like your coffee roasted?</h1>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Preference" id="Light" value="Light" required>
            <label class="form-check-label fontJura" for="Light">Light</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Preference" id="Medium" value="Medium">
            <label class="form-check-label fontJura" for="Medium">Medium</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Preference" id="Dark" value="Dark">
            <label class="form-check-label fontJura" for="Dark">Dark </label>
        </div>
    </div>
    <div class="form-group">
        <h1 style="font-family:'Anton'; color:#0E0504;">Do you home roast?</h1>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="homeRoast" name="HomeRoast" value="true">
            <label class="form-check-label fontJura" for="homeRoast">
                I roast!
            </label>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-lg" style="font-family:Jura; background-color:#4B1F0E; color:ghostwhite;" id="submitRegister"/>
    </div>

</form>

