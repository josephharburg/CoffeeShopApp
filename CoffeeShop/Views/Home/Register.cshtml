
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info" style="font-family:'Anton';">Register for Cuppa Joe!</h1>
<form asp-controller="Home" asp-action="AddUser"  oninput='confirmpassword.setCustomValidity(confirmpassword.value != password.value ? "Passwords do not match." : "")' >
    <div class="form-group">
        <label class="fontJura" for="FirstName">First Name:</label>
        <input type="text" class="form-control" name="firstname" placeholder="Enter first name" required>
    </div>
    <div class="form-group">
        <label class="fontJura" for="lastname">Last Name:</label>
        <input type="text" class="form-control" name="lastname" placeholder="Enter last name" required>

    </div>
    <div class="form-group">
        <label class="fontJura" for="Email">Email Address:</label>
        <input type="email" class="form-control" name="email" placeholder="Enter email" required>
    </div>
    <div class="form-group">
        <label class="fontJura" for="Password">Password:</label>
        <input type="password" class="form-control" id="pw1" name="password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$">
        <small id="passwordHelpBlock" class="form-text text-muted">
            Your password must be 8-20 characters long, contain at least One Uppercase letter, One Lowercase Letter and One Number.
        </small>
    </div>
    <div class="form-group">
        <label class="fontJura" for="Password">Confirm Password:</label>
        <input type="password" class="form-control" id="pw2" name="confirmpassword" placeholder="Confirm Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required>
        <small id="passwordHelpBlock" class="form-text text-muted">
            Password must match first password.
        </small>
    </div>
    <div class="form-group">
        <h1 class="text-info " style="font-family:'Anton';">How do you like your coffee roasted?</h1>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="preference" id="inlineRadio1" value="Light" required>
            <label class="form-check-label fontJura" for="inlineRadio1">Light</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="preference" id="inlineRadio2" value="Medium">
            <label class="form-check-label fontJura" for="inlineRadio2">Medium</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="preference" id="inlineRadio3" value="Dark">
            <label class="form-check-label fontJura" for="inlineRadio3">Dark </label>
        </div>
    </div>
    <div class="form-group">
        <h1 class="text-info" style="font-family:'Anton';">Do you roast?</h1>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="homeRoast" name="homeRoast" value="true">
            <label class="form-check-label fontJura" for="homeRoast">
                I roast!
            </label>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-info" id="submitRegister"/>
    </div>

</form>

